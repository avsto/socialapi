<!DOCTYPE html>
<html lang="en" data-theme="light">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payout Request</title>
    <link rel="stylesheet" href="/css/dashboard.css" />
</head>

<body>

    <!-- Sidebar -->
    <aside class="sidebar">
        <h2 class="logo">Admin</h2>

        <ul class="menu">
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li><a href="/admin/users">Users</a></li>
            <li><a href="/admin/posts">Posts</a></li>
            <li class="active"><a href="/admin/payout">Payout</a></li>
            <li><a href="/admin/messages">Messages</a></li>
            <li><a href="/admin/settings">Settings</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main">

        <!-- Header -->
        <header class="header">
            <h1>Payout Request</h1>
            <button id="themeToggle" class="theme-btn">üåô</button>
        </header>

        <!-- Table Section -->
        <section class="table-section">

            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Wallet</th>
                        <th>Withdrawal Amount</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Method</th>
                    </tr>
                </thead>

                <tbody>
                    <% history.forEach(item=> { %>
                        <tr>
                            <td>
                                <img src="https://brielix.com/<%= item.user?.profile_image || '/images/default-profile-icon-6.jpg' %>"
                                    class="profile-pic"
                                    style="width:40px;height:40px;border-radius:50%;object-fit:cover;">
                                <%= item.user?.name %>
                            </td>

                            <td>
                                <%= item.user?.phone %>
                            </td>
                            <td>
                                <%= item.user?.wallet %>
                            </td>

                            <td>‚Çπ <%= item.amount %>
                            </td>

                            <td>
                                <%= item.createdAt.toDateString() %>
                            </td>
                            <td>
                                <%= item.status %>
                            </td>
                            <td>
                               <p>upiId: <%= item.upiId %></p>
                               <p>accountNumber: <%= item.accountNumber %></p>
                               <p>ifscCode: <%= item.ifscCode %></p>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>

            </table>
            <div class="pagination">

                <% if (currentPage> 1) { %>
                    <a href="?page=<%= currentPage - 1 %>">Prev</a>
                    <% } %>

                        <% for(let i=1; i <=totalPages; i++) { %>
                            <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <a href="?page=<%= currentPage + 1 %>">Next</a>
                                    <% } %>

            </div>

        </section>
    </main>

    <script>
        // Light / Dark Theme Toggle
        const toggle = document.getElementById("themeToggle");
        const html = document.documentElement;

        toggle.addEventListener("click", () => {
            const theme = html.getAttribute("data-theme");
            if (theme === "light") {
                html.setAttribute("data-theme", "dark");
                toggle.textContent = "‚òÄÔ∏è";
            } else {
                html.setAttribute("data-theme", "light");
                toggle.textContent = "üåô";
            }
        });
    </script>

</body>

</html>